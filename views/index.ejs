<%- include('header') -%>
<%- include('menu') -%>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1><p class="fw-bold fs-3">Játékosok</p></h1>

            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                <tr class = "align-middle">
                    <th>
                        <p class="fs-4">Név</p>
                    </th>
                    <th>
                        <p class="fs-4">Életkor</p>
                    </th>
                    <th>
                        <p class="fs-4">Csapat</p>
                    </th>
                    <th >
                        <a href="/jatekos/new" class = "btn btn-sm btn-primary">Új Játékos</a>
                    </th>
                </tr>
                </thead>
                <tbody>
                <% jatekosok.forEach(function(jatekos){%>
                            <tr>
                                <td>
                                    <%= jatekos.nev %>
                                </td>
                                <td>
                                    <%= jatekos.eletkor %>
                                </td>
                                <td>
                                    <%= jatekos._csapat === null ? '...' : jatekos._csapat.nev %>
                                </td>
                                <td>
                                    <a href=" /jatekos/edit/<%= jatekos._id %> " class = "btn btn-sm btn-primary">Módosítas</a>
                                    <a href=" /jatekos/delete/<%= jatekos._id %> " class = "btn btn-sm btn-danger">Törlés</a>
                                </td>
                            </tr>
                <%}); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('footer') -%>